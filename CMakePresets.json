{
    "version": 8,
    "configurePresets": [
		{
            "name": "clang-debug",
            "displayName": "clang-debug",
            "description": "Using compilers: C = clang, CXX = clang++",
            "binaryDir": "${sourceDir}/bin/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS_INIT": "-stdlib=libc++"
            }
        },
        {
            "name": "clang-release",
            "displayName": "clang-release",
            "description": "Using compilers: C = clang, CXX = clang++",
            "binaryDir": "${sourceDir}/bin/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS_INIT": "-stdlib=libc++"
            }
        },
		{
            "name": "mingw32-debug",
            "displayName": "mingw32-debug",
            "description": "Using compilers: C = clang, CXX = clang++",
            "binaryDir": "${sourceDir}/bin/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "x86_64-w64-mingw32-g++",
                "CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS_INIT": "-static"
            }
        }
    ]
}
